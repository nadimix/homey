<div class="bg-white rounded-lg my-4 p-4 shadow-sm transition duration-300 ease-in-out hover:shadow-md">
  <% if @entry.status_change? %>
    <%= render(StatusCardComponent.new(
      user: @entry.user,
      body: @entry.body,
      created_at: @entry.created_at,
    )) %>
  <% else %>
    <%= render(CommentCardComponent.new(
      user: @entry.user,
      body: @entry.body,
      created_at: @entry.created_at,
    )) %>
  <% end %>
</div>

